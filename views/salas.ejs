                                    <td class="text-center"><%=i+1%></td>
                                    <td class="text-center"><%=resp[i].nombre%></td>
                                    <td class="text-center"><%=resp[i].descripcionSala%></td>
                                    <td class="text-center"><%=resp[i].piso%></td>
