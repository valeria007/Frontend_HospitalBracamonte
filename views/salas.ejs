            <div class="col-lg-12 ">
              <div id="main-content" class=" block-web">
                <div class="header">
                  <div class="info2 blue_symbols"><i class="fa fa-hospital-o icon"></i></div>
                  <h3 class="content-header ">Creación Salas</h3>
                </div>
                <div class="page-content">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="block-web">
                        <div class="header">
                          <div class="actions"> 
                            <a class="minimize" data-toggle="collapse" data-target="#demo" href="#demo"><i class="fa fa-chevron-down"></i></a> 
                            <a class="refresh" href=""><i class="fa fa-repeat"></i></a>
                          </div>
                        </div>
                        <br>
                        <div class="porlets-contents">
                          <div id="demo" class="collapse in">
                            <%if (OnlySala != null) { %>
                              <%if (dataSala == null) { %>   
                              <h1>No Se puede establecer una coneccion con Especialidades porfavor vuelva a cargar esta pagina desde una pestaña o vista anterior</h1>
                              <% } else { %>
                            <form class="form-horizontal group-border-dashed" action="/salas/updateSalas/<%=OnlySala[0].id%>"  method="POST" parsley-validate novalidate>
                              <div class="form-group col-sm-12">
                                <div class="col-sm-3">
                                  <label class="control-label">Especialidad:</label>
                                  <select class="form-control" id="source" name="nombre">
                                      <option><%=OnlySala[0].nombre%></option>
                                      <option> ------------------------------------------</option>
                                      <option >INTERNACIÓN GENERAL</option>
                                      <option >UNIDAD DE TERAPIA INTENSIVA</option>
                                      <option >UNIDAD DE CUIDADOS INTENSIVOS CORONARIOS</option>
                                      <option >UNIDAD DE TERAPIA INTENSIVA PEDIÁTRICA</option>
                                      <option >UNIDAD DE TERAPIA INTERMEDIA</option>
                                      <option >MATERNIDAD Y OBSTETRICIA</option>
                                      <option >UNIDAD DE TERAPIA INTENSIVA NEONATOLÓGICA </option>
                                      <option >INTERNACIÓN DE PSIQUIATRÍA</option>
                                      <option >PEDIATRÍA</option>
                                      <option >CIRUGÍA</option>
                                      <option >TRAUMATOLOGÍA</option>  
                                  </select>
                                </div>
                                <div class="col-sm-3">
                                  <label class="control-label">Descricion:</label>
                                  <select  class="form-control" id="source" name="descripcionSala">
                                    <option><%=OnlySala[0].descripcionSala%></option>
                                    <option>-----------------</option>
                                    <option>Sala H.- Niños</option>
                                    <option>Sala H.- Hombres</option>
                                    <option>Sala H.- Mujeres</option>
                                    <option>Sala H.- 3ra. Edad</option>
                                    <option>Sala H.- General</option>
                                  </select>
                                </div>
                                <div class="col-sm-3">
                                  <label class="control-label">Piso:</label>
                                  <input class="form-control" parsley-trigger="change" type="text" name="piso" value="<%=OnlySala[0].piso%>" />
                                  <select  class="form-control" id="source"  name="piso">
                                    <option><%=OnlySala[0].piso%></option>
                                    <option>-------------------------</option>
                                    <option>P.: P. B.(PLANTA BAJA)</option>
                                    <option>1.ª PLANTA(PRIMER PLANTA)</option>
                                    <option>2.ª PLANTA(SEGUNDO PLANTA)</option>
                                    <option>3.ª PLANTA(TERCERA PLANTA)</option>
                                    <option>4.ª PLANTA(CUARTA PLANTA)</option>
                                  </select>
                                </div>
                                
                              </div>
                              <div class="form-group">
                                <div class="col-md-4">
                                  <button class="btn btn-success" type="submit"><i class="fa fa-floppy-o"></i><span>&nbsp;</span>Actualizar</button>
                                  <a class="btn btn-danger"href=""><i class="fa fa-reply"></i><span>&nbsp;</span>Cancelar</a>
                                </div>
                              </div>
                            </form>
                            <% } %>
                            <% } else if (dataSala == null) { %>
                            <h1>No Se puede establecer una coneccion con Especialidades porfavor vuelva a cargar esta pagina desde una pestaña o vista anterior</h1>
                            <% } else { %>
                            <form class="form-horizontal group-border-dashed" action="/salas/salas" method="POST" parsley-validate novalidate>
                              <div class="form-group ">
                                <div class="col-sm-5">
                                  <label class="control-label">Sala:</label>
                                  <select class="form-control" id="source" name="nombre">
                                    <option >INTERNACIÓN GENERAL</option>
                                    <option >UNIDAD DE TERAPIA INTENSIVA</option>
                                    <option >UNIDAD DE CUIDADOS INTENSIVOS CORONARIOS</option>
                                    <option >UNIDAD DE TERAPIA INTENSIVA PEDIÁTRICA</option>
                                    <option >UNIDAD DE TERAPIA INTERMEDIA</option>
                                    <option >MATERNIDAD Y OBSTETRICIA</option>
                                    <option >UNIDAD DE TERAPIA INTENSIVA NEONATOLÓGICA </option>
