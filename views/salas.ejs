                                    <tr>
                                      <th class="text-center">#</th>
                                      <th class="text-center">Sala</th>
                                      <th class="text-center">Area</th>
                                      <th class="text-center">Piso</th>
                                      <th class="text-center">Opciones</th>
                                    </tr>
                                  </tr>
                                </thead>
