                                <div class="form-group pull-right">
                                    <input type="text" class="search form-control" placeholder="Buscar">
                                </div>
                                <span class="counter pull-right"></span>
                                <table class="table table-hover table-bordered results fl-table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Nombre</th>
                                            <th>Apellido</th>
                                            <th>Historial</th>
											<th>Nombre del doctor</th>  
											<th>Tipo de Consulta</th>
                                            <th>Añadir</th>                                           
                                        </tr>
                                        <tr class="warning no-result">
                                                <td colspan="4"><i class="fa fa-warning"></i> No result</td>
                                              </tr>
                                    </thead>
                                    <tbody>
                                        <% for (var i=0; i< PapeletaINTER.length; i++) { %>
                                        <tr>
                                            <th><%=i+1%></th>
                                            <th><%=PapeletaINTER[i].Consulta.Citas_Medica.Paciente.nombre%></th>
                                            <th><%=PapeletaINTER[i].Consulta.Citas_Medica.Paciente.apellidop%></th>
                                            <th><%=PapeletaINTER[i].Historial%> </th>
											<th><%=PapeletaINTER[i].nombreDoctor%></th>  
											<th><%=PapeletaINTER[i].tipoConsulta%></th>  
                                            <td><a href="/medico/PapeletaINT/<%=PapeletaINTER[i].idConsultaMedica%>/<%=PapeletaINTER[i].Historial%>/consultaMedica" class="btn btn-success btn-raised btn-xs"><i class="zmdi zmdi-refresh"></i></a></td>                                            
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
					</div>	
				</div>
	        
		</div>
</section>
	<!--====== Scripts -->
	<%- include("partials/scripts") -%>
