<script>
    /*  locartion() */
     ver()
      function ver (){
       var data =localStorage.getItem('data') 
       var url = localStorage.getItem('url')
       if(data != null){
         var data_token =JSON.parse( localStorage.getItem('data') )
         var data  = {
           data_token: data_token,
           url:url
         }
           var enviar = {
           method: 'POST',
           body: JSON.stringify(data),
           headers: {
             'Content-type' : "application/json"
           }
         }
         if (!data_token.token_part){
          fetch('/enviar',enviar)
          .then(res => res.json())
          .then(data => {
           if(data.success == true){
              window.location.replace(url+data_token.user.id)
             //console.log(url+data_token.user.id)
            }else{
              console.log("false")
            }
            console.log(data.success)
          })
         }else{
          fetch('/enviar',enviar)
          .then(res => res.json())
          .then(data => {
           if(data.success == true){
              window.location.replace(url+data_token.user.id+'/'+data_token.token_part)
             //console.log(url+data_token.user.id)
            }else{
              console.log("false")
            }
            console.log(data.success)
          })
         }
         

       }
     } 
</script>
