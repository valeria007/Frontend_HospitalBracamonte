					<div class="block-web">
						<div class="header">
              <div class="actions"></div>
					    <h2 class="content-header"><div class="info gray_symbols"><i class="fa fa-medkit icon"></i></div> Registro de Solicitud {{msg}}</h2>
            </div>
            <span style="color: red;">{{respuestaPost_false}}</span>
            <span style="color: blue;">{{respuestaPost_true}}</span>
						<div class="porlets-content">
              <!--Formulario-->
              <form  @submit="reg_pedido" method="POST" parsley-validate novalidate>
                <div class="col-md-12">
                  <div class="col-md-6">
                    <!-- <div class="form-group">
                      <label>NÂ° de Solicitud:  esto se introduce automaticamente</label>
                      <input type="text" required class="form-control" onkeyup="mayus(this);">
                    </div> -->
                  </div>  
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Trimestre a Reportar:</label>
                      <select required class="form-control" v-model="trimestre" onkeyup="mayus(this);">
                        <option>Primer Trimestre</option>
                        <option>Segundo Trimestre</option>
                        <option>Tercer Trimestre</option>
                        <option>Cuarto Trimestre</option>
                        <option>Solicitud de Emergencia</option>
                      </select>
                    </div>
                  </div>
                  
                </div>
                <div class="col-md-12">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Responsable:</label>
                      <input type="text" required class="form-control" :value=" responsable = '<%=data_doc.data.medico.nombre%> <%=data_doc.data.medico.apellidop%> <%=data_doc.data.medico.apellidom%>'" readonly onkeyup="mayus(this);">
                      <input type="hidden" :value="id_user = <%=data_doc.data.medico.id%> ">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Destino:</label>
                      <input type="text" v-model="destino" required class="form-control" onkeyup="mayus(this);">
                    </div>
                  </div>
                </div>
                <!-- Button trigger modal -->
                <button type="button" data-target="#myModal2" data-toggle="modal" class="btn btn-success" @click="searchInTheListMed('')">Lista de Productos</button><br>
                <br>
                <div class="table-responsive">
                  <table  class="display table table-bordered table-striped">
                    <thead>
                      <tr>
                      <th>#</th>
                      <th>Cantidad del Producto</th>
                      <th>Codigo</th>
                      <th>Descripcion</th>
                      <th>Cantidad</th>
                      <th>Precio</th>
                      <th>Precio Toal</th>
                      <th>Eliminar</th>
                      <th>Eliminar todo</th>
                      </tr>
                    </thead>
                    <tbody v-for="(car, index) in listItems">                                                    
                      <tr>
                      <td>{{index}}</td>
                      <td>{{car.qty}}</td>
                      <td>{{car.item.codificacion}}</td>
                      <td>{{car.item.nombre}}</td>
                      <td>{{car.item.cantidad}}</td>
                      <td>{{car.item.price}}</td>
                      <td>{{car.price}}</td>
                      <td> <a @click="reduceByOne(car.item.id)">Reducir</a></td>
                      <td><a @click="removeItem(car.item.id)">Eliminar</a></td>                                                        
                      </tr>                                                   
                    </tbody>
                  </table>
                </div><!--/table-responsive-->
                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i>  Guardar</button>
                <a class="btn btn-danger" href="/Farmacia/solicitudes"><i class="fa fa-times"></i> Cancelar</a>
              </form>
						</div>
          </div>
				</div>
			</div><!--/row-->
    </div>
	<!--\\\\\\\ content panel end \\\\\\-->
