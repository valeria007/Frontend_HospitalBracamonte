<script type="text/javascript">
	// este scrip es para verificar si esta el token en local starge
	var data = localStorage.getItem('data')
	console.log(data)
	if (data == null){
		window.location.replace('/')
  }
  function delete_local_storage(){
		console.log ("ssss")
		localStorage.removeItem('data');
		localStorage.removeItem('url');
  }
  setTimeout(()=>{
    delete_local_storage()
    //window.location.replace('/')
  },500000);
</script>
<body class="light_theme  fixed_header left_nav_fixed">
  <div class="wrapper">
    <div class="header_bar">
      <div class="brand">
        <div class="logo" style="display:block"><span class="theme_color">Hospital</div>
      </div>
      <div class="header_top_bar">
        <a href="javascript:void(0);" class="menutoggle"> <i class="fa fa-bars"></i></a>
        <div class="top_right_bar">
          <div class="user_admin dropdown"> <a href="javascript:void(0);" data-toggle="dropdown"><img src="/images/user.png" /><span class="user_adminname"><%=data_doc.data.personal.nombre%> <%=data_doc.data.personal.apellidop%></span> <b class="caret"></b> </a>
            <ul class="dropdown-menu">
              <div class="top_pointer"></div>
              <li> <a href="profile.html"><i class="fa fa-user"></i> Profile</a> </li>
              <li> <a href="help.html"><i class="fa fa-question-circle"></i> Help</a> </li>
              <li> <a href="settings.html"><i class="fa fa-cog"></i> Setting </a></li>
              <li> <a href="/delete_token/<%=data_doc.data.token_id%>" onclick="delete_local_storage()" ><i class="fa fa-power-off"></i> Logout</a> </li>
            </ul>
          </div> 
        </div>
      </div>
    </div>
    <div class="inner">
      <div class="left_nav">
        <div class="left_nav_slidebar">
          <ul>
            <li class="left_nav_active theme_border"><a href="javascript:void(0);"><i class="fa fa-home"></i> Home <span class="left_nav_pointer"></span> <span class="plus"><i class="fa fa-plus"></i></span> </a>
              <ul>
                <li> <a href="/almacen/home/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>"  > <span>&nbsp;</span> <i class="fa fa-circle theme_color"></i> <b>Inicio</b> </a> </li>
              </ul>
            </li>
            <li> <a href="javascript:void(0);"> <i class="fa fa-hospital-o icon"></i>Almacen <span class="plus"><i class="fa fa-plus"></i></span></a>
              <ul class="opened" style="display:block">
                <li> <a href="/almacen/grupoAsig/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b >Grupos de Asignacion</b> </a> </li>
                <li> <a href="/medicamento/medicamentos/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b>Medicamentos</b> </a> </li>
                <li> <a href="/proveedores/proveedores/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b>Proveedores</b> </a> </li>
                <li> <a href="/almacen/pedidos/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b>Pedidos</b> </a> </li>
                <li> <a href="/distribucion/listDistribucion/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b class="theme_color">Distribucion</b> </a> </li>
                <li> <a href="/medicamento/stock/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b>Stock</b> </a> </li>
              </ul>
            </li>
            <li> <a href="javascript:void(0);"> <i class="fa fa-paste"></i> Reportes Almacen<span class="plus"><i class="fa fa-plus"></i></span> </a>
              <ul>
                <li> <a href="/almacen/reportes_pedidos/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b></b>Reportes de Pedidos </a> </li>
                <li> <a href="/almacen/reportes_salidas/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b>Reportes de Salidas</b> </a> </li>
                <li> <a href="/almacen/kardexValorizado/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b>Kardex Valorizado</b> </a> </li>
                <li> <a href="/almacen/med_ven/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>"> <span>&nbsp;</span> <i class="fa fa-circle"></i> <b>Med. Vencidos</b> </a> </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <!--Contenido-->
      <div class="contentpanel" id="pedidos"><br>
        <div class="container clear_both padding_fix col-lg-8">
          <div class="main-content">
            <div class="col-lg-12 block-web">
              <div class="container-fluid">
                <div class="header">
                  <div class="actions"><a class="minimize" href="#">Refresh</a><a class="refresh" href="/distribucion/volver"><i class="fa fa-repeat"></i></a> </div>
                  <h2 class="content-header"><div class="info gray_symbols"><i class="fa fa-clipboard icon"></i></div>  Distribucion</h2>  
                </div>
              </div>
            </div>
            <div class="main-content">
              <section class="panel default blue_title h2">
                <div class="page-content">
                  <ul class="nav nav-tabs" id="myTab">
                    <li class=" col-lg-6 active active  text-center"><a href="#neww" data-toggle="tab"><i class="fa fa-edit icon"></i><span>&nbsp;&nbsp;&nbsp;</span>Solicitudes de Farmacia </a></li>
                    <li class="col-lg-6 text-center"><a href="#listt" data-toggle="tab"><i class="fa fa-clipboard "></i><span>&nbsp;&nbsp;&nbsp;</span>Distribuciones Realizadas</a></li>
                  </ul>
                  <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade active in " id="neww">
                      <table  class="display table table-bordered table-striped " id="dynamic-table">
                        <thead>
                          <tr>
                          <th>#</th>
                          <th>Nro. de Solicitud</th>
                          <th>Responsable</th>
                          <th>Fecha</th>
                          <th>Trimestre</th>
                          <th>Estado</th>
                          <th>Destino</th>
                          <th>Opciones</th>
                          </tr>
                        </thead>
                        <tbody>
                          <%for(var i = 0; i < lis_farmacia_pedidos.length; i++) { %>
                            <tr>
                              <td><%=i+1%></td>
                              <td><%=lis_farmacia_pedidos[i].num_solicitud%></td>
                              <td><%=lis_farmacia_pedidos[i].responsable%></td>
                              <td><%=lis_farmacia_pedidos[i].createdAt%></td>
                              <td><%=lis_farmacia_pedidos[i].trimestre%></td>		
                              <% if (lis_farmacia_pedidos[i].medicamento_mandado_almacen == null) { %>											
                                <td><span style="color: crimson;">En espera</span></td>
                              <% } else { %>
                                <td><span style="color: rgb(220, 173, 20);">Mandado a almacen</span></td>
                              <% } %>
                              <td><%=lis_farmacia_pedidos[i].destino%></td>
                              
                              <td><a href="/almacen/farmacia_ver_pedidos/<%=lis_farmacia_pedidos[i].id%>/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>">ver</a></td>
                            </tr>
                          <% } %>
                        <tbody>
                      </table>
                    </div>
                    <div class="tab-pane fade " id="listt">
                      <div class="porlets-content">
                        <div class="panel-body">
                          <!-- Button trigger modal -->
                          <button type="button" class="btn btn-info btn-lg mb10" onclick=location="/distribucion/nueva_distribucion/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>" ><i class="fa  fa-clipboard  icon"></i> Nueva Distribucion</button>
                        </div>
                        <div class="table-responsive">
                          <table  class="display table table-bordered table-striped" id="dynamic-tablee">
                            <thead>
                              <tr>
                              <th>#</th>
                              <th>Cadigo</th>
                              <th>Responsable</th>
                              <th>Recibe</th>
                              <th>Fecha Llegada</th>
                              <th>Opciones</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% for (var i = 0; i < resp.length; i++) { %>
                              <tr>
                              <td><%=i+1%></td>
                              <td><%=resp[i].codigo%></td>
                              <td><%=resp[i].responsable%></td>
                              <td><%=resp[i].recibe%></td>
                              <td><%=resp[i].fechaLlegada%></td>
                              <td class="text-center">
                              <a @click="onlyDistrubucion(<%=resp[i].id%>)" data-target="#myModal" data-toggle="modal" class="btn  tooltips" data-original-title="Ver Distribucion"><i class="fa fa-eye "></i></a><span>&nbsp;</span>
                              <a href="/almacen/distri_imprimir/<%=resp[i].id%>/<%=data_doc.data.token_id%>/<%=data_doc.data.token_part%>" data-toggle="tooltip" class="btn  tooltips" data-original-title="Imprimir"><i class="fa fa-print" style="color:rgb(236, 198, 26)"></i></a><span>&nbsp;</span>
                              </td>
                              </tr>
                              <% } %>
                            </tbody>
                          </table>
                        </div><!--/table-responsive-->
                      </div><!--/porlets-content-->    
                    </div>
                  </div>
                </div>
              </section>
            </div>
          </div>
        </div>
        <!--Modal-->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel"> <i class="fa fa-clipboard icon"></i>Distribucion</h4>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="block-web">          
                    <div class="porlets-content">
                      <form  method="POST" class="form-horizontal group-border-dashed"  parsley-validate novalidate>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Codigo:</label>
                          <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="oneDistrbucion.codigo" disabled="">
                          </div>
                        </div><!--/form-group--> 
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Recibe:</label>
                          <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="oneDistrbucion.recibe" disabled="">
                          </div>
                        </div><!--/form-group--> 
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Nombre de Responsable:</label>
                          <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="oneDistrbucion.responsable" disabled="">
                          </div>
                        </div><!--/form-group--> 
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Fecha de Distribucion:</label>
                          <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="oneDistrbucion.fechaLlegada" disabled="">
                          </div>
                        </div><!--/form-group--> 
                      </form>
                      <div class="panel-body">
                        <table class="table table-hover">
                          <thead>
                            <tr>
                            <th>#</th>	
                            <th>Nombre</th>
								  	        <th>Precentacion</th>
							              <th>Precio</th>
										  	    <th>Cantidad Distribuido</th>                                      
                            </tr>
                          </thead>
                          <tbody v-for="(item, index) in oneDistrbucion.productos">
                            <tr>
                            <td>{{index+1}}</td>
                            <td>{{item.item.nombre}}</td>
                            <td>{{item.item.presentacion}}</td>
                            <td>{{item.item.price}}</td>
                            <td>{{item.qty}}</td>
                            </tr>                              
                          </tbody>
                        </table>                       
                      </div>
                      <div class="modal-footer">
                        <button type="" class="btn btn-info" data-dismiss="modal">OK</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </div>
<%- include("../partials/scripts") -%>
<script src="https://cdnjs.cloudflare.com/ajax/libs/numeral.js/1.5.3/numeral.min.js"></script>   
<script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.16.4/lodash.min.js"></script>
<script src="/js/vue/distribucion.js"></script>
</body>
</html>

