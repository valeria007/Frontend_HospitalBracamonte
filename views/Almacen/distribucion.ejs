      <!--Contenido-->
      <div class="contentpanel" id="pedidos"><br>
        <!--Formulario-->
        <div class="container clear_both padding_fix">
          <div class="row">
            <div class="col-md-12">
              <div class="block-web">
                <div class="header">
                  <div class="actions"><a class="minimize" href="#">Refresh</a><a class="refresh" href="/distribucion/volver"><i class="fa fa-repeat"></i></a> </div>
                  <h2 class="content-header"><div class="info gray_symbols"><i class="fa  fa-clipboard  icon"></i></div>  Distribucion</h2>
                </div>
                <div class="porlets-content">
                  <div class="panel-body">
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-info btn-lg mb10" onclick=location="/distribucion/nueva_distribucion" ><i class="fa  fa-clipboard  icon"></i> Nueva Distribucion</button>
                  </div>
                  <div class="table-responsive">
                    <table  class="display table table-bordered table-striped" id="dynamic-table">
                      <thead>
								  			<tr>
									  		<th>#</th>
										  	<th>Cadigo</th>
						  				  <th>Responsable</th>
	  										<th>Recibe</th>
                        <th>Fecha Llegada</th>
                        <th>Opciones</th>
					  						</tr>
						  				</thead>
							  			<tbody>
                        <% for (var i = 0; i < resp.length; i++) { %>
									  		<tr>
										  	<td><%=i+1%></td>
  											<td><%=resp[i].codigo%></td>
	  										<td><%=resp[i].responsable%></td>
		  									<td><%=resp[i].recibe%></td>
                        <td><%=resp[i].fechaLlegada%></td>
                        <td class="text-center">
                            <a @click="onlyDistrubucion(<%=resp[i].id%>)" data-target="#myModal" data-toggle="modal" class="btn  tooltips" data-original-title="Ver Distribucion"><i class="fa fa-eye "></i></a><span>&nbsp;</span>
                            <a href="/almacen/distri_imprimir/<%=resp[i].id%>" data-toggle="tooltip" class="btn  tooltips" data-original-title="Imprimir"><i class="fa fa-print" style="color:rgb(236, 198, 26)"></i></a><span>&nbsp;</span>
                        </td>
                        </tr>
                        <% } %>
								  		</tbody>
                    </table>
                  </div><!--/table-responsive-->
                </div><!--/porlets-content-->
              </div><!--/block-web--> 
            </div><!--/col-md-12--> 
          </div><!--/row-->
        </div>
        <!--Modal-->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel"> <i class="fa fa-clipboard icon"></i>Distribucion</h4>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="block-web">          
                    <div class="porlets-content">
                      <form  method="POST" class="form-horizontal group-border-dashed"  parsley-validate novalidate>
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Codigo:</label>
                          <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="oneDistrbucion.codigo" disabled="">
                          </div>
                        </div><!--/form-group--> 
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Recibe:</label>
                          <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="oneDistrbucion.recibe" disabled="">
                          </div>
                        </div><!--/form-group--> 
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Nombre de Responsable:</label>
                          <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="oneDistrbucion.responsable" disabled="">
                          </div>
                        </div><!--/form-group--> 
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Fecha de Distribucion:</label>
                          <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="oneDistrbucion.fechaLlegada" disabled="">
                          </div>
                        </div><!--/form-group--> 
                      </form>
                      <div class="panel-body">
                        <table class="table table-hover">
                          <thead>
                            <tr>
                            <th>#</th>	
                            <th>Nombre</th>
								  	        <th>Precentacion</th>
							              <th>Precio</th>
										  	    <th>Cantidad Distribuido</th>                                      
                            </tr>
                          </thead>
                          <tbody v-for="(item, index) in oneDistrbucion.productos">
                            <tr>
                            <td>{{index+1}}</td>
                            <td>{{item.item.nombre}}</td>
                            <td>{{item.item.presentacion}}</td>
                            <td>{{item.item.price}}</td>
                            <td>{{item.qty}}</td>
                            </tr>                              
                          </tbody>
                        </table>                       
                      </div>
                      <div class="modal-footer">
                        <button type="" class="btn btn-info" data-dismiss="modal">OK</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>
